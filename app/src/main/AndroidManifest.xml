<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.rphmelo.cnjokes">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:name=".MyApplication"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
            android:label="@string/activity_random_joke_title"
            android:screenOrientation="portrait"
            android:name=".jokes.presentation.ui.activity.RandomJokeActivity"/>

        <activity
                android:name=".jokes.presentation.ui.activity.CategoryListActivity"
                android:label="@string/activity_category_list_title"
                android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>